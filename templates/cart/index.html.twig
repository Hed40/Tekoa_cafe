{% extends 'base.html.twig' %}

{% block title %}Mon panier - Le Tekoa_café !
{% endblock %}

{% block content %}

	<div class="example-wrapper">
		<h1>Mon panier</h1>

		Retrouvez l'ensemble de vos produits ajoutés à votre panier.
		<br>
		<br>
		{%if cart|length > 0 %}
			<table class="table">
				<thead>
					<tr>

						<th scope="col">Produit</th>
						<th scope="col"></th>
						<th scope="col">Quantité</th>
						<th scope="col">Prix</th>
						<th scope="col">Total</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					{% set total = null %}
					{% for product in cart %}
						<tr>
							<th>
								<img src="/uploads/{{ product.product.illustration }}" alt=" {{ product.product.name}}" height="75px">
							</th>
							<td>{{product.product.name}}</td>
							<td>

								<a href="{{path('decrease_to_cart', { 'id' : product.product.id }) }}">
									<img src="{{ asset('assets/img/minus.png') }}" class="icon-qtt" alt="Enlever un produit">
								</a>
								{{product.quantity}}
								<a href="{{path('add_to_cart', { 'id' : product.product.id }) }}">
									<img src="{{ asset('assets/img/plus.png') }}" class="icon-qtt" alt="Ajouter un produit">
								</a>
							</td>
							<td>{{(product.product.price / 100)|number_format(2, ',')}}
								€</td>
							<td>{{((product.product.price * product.quantity) / 100)|number_format(2, ',')}}
								€</td>

							<td>
								<a href="{{path('delete_to_cart', { 'id' : product.product.id }) }}">
									<img src="{{ asset('assets/img/delete.png') }}" height="18px" alt="Supprimer mon produit"></td>
							</td>
						</tr>
					</a>
				</tbody>
			</tr>
			<a href="">
				{% set total = total + (product.product.price * product.quantity) %}
			</a>
		</tbody>
	{% endfor %}
</table>

<div class="text-right mb-5">
	<b>Nombre de produit :</b>
	{{cart|length}}<br>
	<b>Total de mon panier :</b>
	{{(total / 100)|number_format(2, ',')}}
	€

	<a href="" class="btn btn-success btn-block mt-3">Valider mon panier</a>
</div></div>{% else %}<hr><p>
<b>
	Votre panier est vide</b></p><br>{% endif %}{% endblock %}
