{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe - Tékoa Café{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Modifier mon mot de passe</h1>
    <hr>
    <ul>
        <a href="{{ path('app_account')}}">Retourner à mon espace " Mon compte"</a>
    </ul>
    <hr>
    {% if notification_Gp %}
    <div class="alert-info">{{ notification_Gp }}</div>
    {% elseif notification_Wp %}
    <div class="alert-danger">{{ notification_Wp }}</div>
    {% endif %}
    {{ form(form)}}
    </hr>
</div>

{% endblock %}
